<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Search</title>
  </head>
  <body>
    <h2>Menu Restaurant: <%=restaurants.name%></h2>
    <form class="" action="/restaurants/<%=restaurants.id%>/search" method="post">
      Search by: <select class="" name="menus">
        <option value="name">name</option>
        <option value="menu_type">menu_type</option>
        <option value="rating">rating</option>
        <option value="price">price</option>
      </select>
      Keyword: <input type="text" name="keyword" value=""></br>
      <button type="submit" name="button">Submit</button>
    </form>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Menu Type</th>
          <th>Rating</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <%restaurants.Menus.forEach(menu=>{%>
          <tr>
            <td><%=menu.id%></td>
            <td><%=menu.name%></td>
            <td><%=menu.menu_type%></td>
            <td><%=menu.rating%></td>
            <td><%=menu.price%></td>
          </tr>
        <%})%>
        </tbody>
    </table>
  </body>
</html>
