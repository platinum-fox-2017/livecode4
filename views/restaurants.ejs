<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Restaurant</title>
  </head>
  <body>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%restaurants.forEach(restaurant=>{%>
          <tr>
            <td><%=restaurant.id%></td>
            <td><%=restaurant.name%></td>
            <td><%=restaurant.address%></td>
            <td>
              <a href="/restaurants/<%=restaurant.id%>/view_menu">View Menu</a>
            </td>
          </tr>
        <%})%>
        </tbody>
    </table>
  </body>
</html>
