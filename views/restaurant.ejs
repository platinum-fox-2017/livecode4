<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Restaurant</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>

<body>
    <table>
        <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>action</th>
        </thead>
        <tbody>
            <% dataRestaurants.map((dataRestaurant)=>{ %>
                <tr>
                    <td>
                        <%= dataRestaurant.id %>
                    </td>
                    <td>
                        <%= dataRestaurant.name %>
                    </td>
                    <td>
                        <%= dataRestaurant.address %>
                    </td>
                    <td>
                        <a href="/restaurants/<%= dataRestaurant.id %>/view_menu">VIEW MENU</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>