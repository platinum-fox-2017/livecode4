<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>restaurant list</title>
  </head>
  <body>
    <table>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Address</th>
        <th>Action</th>
      </tr>

      <% restaurants.forEach(resto => { %>
      <tr>
        <td><%= resto.id %></td>
        <td><%= resto.name %></td>
        <td><%= resto.address %></td>
        <td>
          <a href="/restaurants/<%= resto.id %>/view_menu">View Menu</a>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
