<!doctype html>

<head>
  <meta charset="utf-8">
  <title>Restaurant</title>

  <link rel="stylesheet" href="/css/style.css">
</head>
 <body>
     <h3>Menu Restaurant <%=restaurant.name%></h3>
     <form action='/restaurants/<%=restaurant.id%>/search' method='post'>
    <p>Search by:
    <select name='search_type'>
        <option value="name">name</option>
        <option value="menu_type">menu_type</option>
        <option value="rating">rating</option>
        <option value="price">price</option>
    </select>
    Keyword:
    <input type='text' name='search'></p>
    <input type='submit' value='Submit'>
    </form>
     <table>
         <tr>
             <th>Id</th>
             <th>Name</th>
             <th>Menu Type</th>
             <th>Rating</th>
             <th>Price</th>
         </tr>
         <%for (let i = 0; i < restaurant.Menus.length; i++){%>
             <tr>
                 <td><%=restaurant.Menus[i].id%></td>
                 <td><%=restaurant.Menus[i].name%></td>
                 <td><%=restaurant.Menus[i].menu_type%></td>
                 <td><%=restaurant.Menus[i].rating%></td>
                 <td><%=helper.format_currency(restaurant.Menus[i].price)%></td>
             </tr>
        <% }%>


     </table>
 </body>
