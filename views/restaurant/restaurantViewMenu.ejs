<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" type="text/css" href="/styles/css.css">
  <title><%= title %></title>
</head>

<body>
  <%- include('../partial/navigation.ejs') %>
  <div class="main">
    <div class="content">
      <h1><%= header %></h1>


      <form action="/restaurants/<%= restaurantId %>/search" method="post">

        <select name="SearchKey">
          <option value="name">Name</option>
          <option value="menu_type">menu Type</option>
          <option value="rating">Rating</option>
          <option value="price">Price</option>
        </select>
        keyword:
        <input type="text" name="Keyword" value="">

        <input type="submit" value="Submit">

      </form>
      <br>

      <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Menu Type</th>
            <th>Rating</th>
            <th>Price</th>
        </tr>
        <!-- loop -->
        <% for (let i = 0; i < restaurantMenus.length; i++) { %>
          <tr>
            <td><%= restaurantMenus[i].id %></td>
            <td><%= restaurantMenus[i].name %></td>
            <td><%= restaurantMenus[i].menu_type %></td>
            <td><%= restaurantMenus[i].rating %></td>
            <td><%= restaurantMenus[i].price %></td>

          </tr>
        <% } %>

      </table>




    </div>
  </div>

</body>
</html>
