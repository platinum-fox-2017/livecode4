<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" type="text/css" href="/styles/css.css">
  <title><%= title %></title>
</head>

<body>
  <%- include('../partial/navigation.ejs') %>
  <div class="main">
    <div class="content">
      <h1><%= header %></h1>
      <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <!-- loop -->
        <% for (let i = 0; i < foundRestaurants.length; i++) { %>
          <tr>
            <td><%= foundRestaurants[i].id %></td>
            <td><%= foundRestaurants[i].name %></td>
            <td><%= foundRestaurants[i].address %></td>
            <!-- view menu -->
            <td>
              <a href="/restaurants/<%= foundRestaurants[i].id %>/view_menu">
                <button type="button" name="button" >
                  View Menu
                </button>
              </a>
              
            </td>
          </tr>
        <% } %>

      </table>




    </div>
  </div>

</body>
</html>
