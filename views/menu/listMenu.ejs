<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
        <%- include('../partials/header')  %>
        
    <table border=1 cellspacing=0 cellpadding=10>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Menu Type</th>
            <th>Rating</th>
            <th>Price</th>
            <th>Restaurant ID</th>
            <th>Action</th>
        </tr>
        <% menus.forEach((list) => { %>
        <tr>
            <td><%= list.id %></td>
            <td><%= list.name %></td>
            <td><%= list.menu_type %></td>
            <td><%= list.rating %></td>
            <td><%= helpers.format_currency(list.price) %></td>
            <td><%= list.Restaurant.name%></td>
            <td><a href="/menus/<%= list.id %>/edit">Edit</a>   <a href="/menus/<%= list.id %>/delete">Delete</a></td>
        </tr>
        <% }) %>
    </table>

    <br>

    <%= err %> 
    
    <form method="POST">
        Name:
        <input type="text" name="name"><br>
        Menu Type:
        <input type="text" name="menu_type"><br>
        Rating:
        <input type="number" name="rating"><br>
        Price:
        <input type="number" name="price"><br>
        Restaurant:


        <select name="RestaurantId">
            <% restaurant.forEach((listName) => { %>    
                <option value="<%= listName.id %>"><%= listName.name %></option>
            <% }) %>
        </select>

        <br>
        <input type="submit" value="Submit">
    </form>
    <%- include('../partials/footer')  %>
</body>
</html>