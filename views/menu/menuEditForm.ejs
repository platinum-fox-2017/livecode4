<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" type="text/css" href="/styles/css.css">
  <title><%= title %></title>
</head>

<body>
  <%- include('../partial/navigation.ejs') %>
  <div class="main">
    <div class="content">
      <h1><%= header %></h1>
      <% if (err) { %>
        <h4><%= err.message %><h4>
      <% } %>
      <form action="/items/edit/<%= menuID %>" method="post">

        Name:<br>
        <input type="text" name="name" value="<%= foundMenu.name %>"><br>
        <br>
        Menu type:<br>
        <input type="text" name="menu_type" value="<%= foundMenu.menu_type %>"><br>
        <br>
        Rating:<br>
        <input type="number" name="rating" value="<%= foundMenu.rating %>"><br>
        <br>
        price:<br>
        <input type="number" name="price" value="<%= foundMenu.price %>"><br>
        <br>
        <select name="RestaurantId">
          <% for (var i = 0; i < foundRestaurants.length; i++) { %>
            <option value="<%= foundRestaurants[i].id %>"><%= foundRestaurants[i].name %></option>
          <% } %>
        </select>
        <input type="submit" value="Submit">
      </form>
    </div>
  </div>

</body>

</html>
